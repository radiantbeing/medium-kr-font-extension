{
    "manifest_version": 3,
    "name": "Medium KR Font",
    "description": "아름다운 한글 글꼴로 새롭게 즐기는 Medium",
    "version": "1.0.8",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://*.medium.com/*"],
            "css": [
                "fonts/d2coding/d2coding.css",
                "fonts/ibm-plex-sans-kr/ibm-plex-sans-kr.css",
                "fonts/jet-brains-mono/jet-brains-mono.css",
                "fonts/kakao-big-sans/kakao-big-sans.css",
                "fonts/kakao-small-sans/kakao-small-sans.css",
                "fonts/line-seed-kr/line-seed-kr.css",
                "fonts/maru-buri/maru-buri.css",
                "fonts/nanum-barun-gothic/nanum-barun-gothic.css",
                "fonts/nanum-gothic/nanum-gothic.css",
                "fonts/nanum-square-neo/nanum-square-neo.css",
                "fonts/noto-sans-kr/noto-sans-kr.css",
                "fonts/noto-serif-kr/noto-serif-kr.css",
                "fonts/pretendard/pretendard.css",
                "fonts/ridi-batang/ridi-batang.css",
                "fonts/spoqa-han-sans-neo/spoqa-han-sans-neo.css"
            ],
            "js": ["content-script.js"]
        }
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["fonts/*"],
            "matches": ["https://*.medium.com/*"]
        }
    ],
    "permissions": ["storage", "activeTab"]
}
